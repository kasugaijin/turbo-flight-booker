  <%= turbo_frame_tag "passenger_#{passenger_form.index}" do %>
    <div class="content">
      <div class='result-col'>
          <%= passenger_form.hidden_field :id %>
          <%= passenger_form.label :name, 'Name*', class: 'my-2 mx-3 label' %>
          <%= passenger_form.text_field :name, required: true, class: 'my-2 mx-3 input' %>
          <%= passenger_form.label :email, 'Email*', class: 'my-2 mx-3 label' %>
          <%= passenger_form.email_field :email, required: true, class: 'my-2 mx-3 input' %>

      <%= passenger_form.submit "Remove", 
                formaction: passenger_path(passenger_form.index, passenger_form.object.id), 
                formmethod: :delete, 
                formnovalidate: true,
                "data-remove-target" => "button",
                class: 'button is-danger is-inverted mr-2',
                data: { turbo_frame: "passenger_#{passenger_form.index}" } %>
      </div>
    </div>
  <% end %>
