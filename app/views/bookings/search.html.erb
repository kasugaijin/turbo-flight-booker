<section class='section'>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <article class="panel">
            <p class="panel-heading has-text-centered">Search Reservation #</p>
            <div class="box">
              <%= form_tag(search_path, :method =>'get') do %>
                <div class='has-text-centered'>
                  <%= search_field_tag :search, 
                                      params[:search], 
                                      placeholder: 'Enter reservation number',
                                      class: 'input' %>
                </div>
                <%= button_tag 'Search', class: 'button is-info mt-4' %>
              <% end %>
            </div>
        </article>
      </div>
    </div>
  </div>
</section>
